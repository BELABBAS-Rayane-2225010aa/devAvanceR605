{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('CSS/connection-form.css') }}">
{% endblock %}

{% block body %}
    <div class="connection-container">
        <h2>Login</h2>

        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_connection') }}" method="post" class="connection-form">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" required>

            <input type="hidden" name="app_qcm" value="/qcm">

            <button type="submit" class="btn">Login</button>
        </form>
        <a href="{{ path('app_register') }}" class="btn-connection">
            <button type="button">Register</button>
        </a>
    </div>
{% endblock %}